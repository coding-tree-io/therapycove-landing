#!/usr/bin/env sh
set -e

if command -v pwsh >/dev/null 2>&1; then
  pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File scripts/check-css-bundle.ps1
  exit 0
fi

if command -v powershell >/dev/null 2>&1; then
  powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -File scripts/check-css-bundle.ps1
  exit 0
fi

echo "PowerShell is required to run the CSS bundle check."
echo "Run: npm run build:css and commit assets/css/site.bundle.css"
exit 1
